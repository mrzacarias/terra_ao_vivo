{
	"manifest_version": 2,
	"name": "Terra Ao Vivo",
	"description": "Extensão para ver todos os eventos de ao vivo que estão rolando no momento.",
	"version": "0.5",
    "icons": { "16": "icon16.png", "48": "icon48.png", "128": "icon128.png" },
	"permissions": ["http://esportes.terra.com.br/","storage"],
	"background": { "scripts": ["background.js"] },	
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html"
	}
}